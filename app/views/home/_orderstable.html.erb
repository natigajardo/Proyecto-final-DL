<div class="pt-3 table-responsive">

  <table class="table margin-table-admin table-striped table-bordered">
    <thead class="title-table-products">
      <tr>
        <th>Id</th>
        <th>Number code</th>
        <th>User name</th>
        <th>User email</th>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Total</th>
        <th>State</th>
        <th colspan="2">Opciones</th>
      </tr>
    </thead>

    <tbody class="text-table-products">
      <% @orders.each do |order| %>
        <% if order.state != "Creada" %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.number %></td>
            <td><%= order.user.name %></td>
            <td><%= order.user.email %></td>
            <td><% order.order_items.each do |item| %>
                - <%= item.product.name %><br>
                <% end %>
            </td>
            <td><% order.order_items.each do |item| %>
              - <%= item.quantity %><br>
                <% end %>
            </td>  
            <td><%= order.total %></td>
            <td><%= order.state %></td>
      
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%= link_to 'Destroy', order, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

</div>