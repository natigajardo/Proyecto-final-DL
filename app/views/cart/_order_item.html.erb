    <td><%= image_tag(item.product.images.first.variant(resize: "50x50").processed) %></td>
    <td><%= item.product.name %></td>
    <td><%= item.product.price %></td>
    <td><%= item.quantity %></td>
    <td><%= item.subtotal %></td>
    <td><%= link_to 'Remover item', item, method: :delete, remote: true, data: { confirm: 'EstÃ¡s seguro?' }, class: "btn btn-warning btn-cart" %></td>
  </tr>
<% end %>  
    
  
